  },
  "homepage": "https://github.com/rajsite/webvi-experiments#readme",
  "dependencies": {
    "@ni/eslint-config-javascript": "^5.0.0",
    "cspell": "^9.2.1",
    "globals": "^14.0.0",
    "glob-exec": "^0.1.1",
    "markdown-link-check": "^3.13.7",
    "markdownlint-cli": "^0.45.0"
  }
}
